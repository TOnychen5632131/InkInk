{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "vercel-python@3.11.0"
    }
  },
  "buildCommand": "cd frontend && pnpm install --frozen-lockfile && pnpm build",
  "installCommand": "cd frontend && pnpm install --frozen-lockfile --ignore-scripts",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
